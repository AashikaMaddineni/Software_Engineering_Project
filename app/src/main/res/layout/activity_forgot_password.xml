<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout
    android:id="@+id/fragment1"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="#FAFAFA"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">




        <TextView
            android:id="@+id/txtLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Forgot Password"
            android:textColor="#000000"
            android:textSize="36dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/YefLogo"
            app:layout_constraintVertical_bias="0.036"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textColor="#000000"
            android:text="Enter the email id below to reset your password"
            android:textSize="12sp"
            android:textAlignment="center"
            android:gravity="center_horizontal" />
        <EditText
            android:id="@+id/etPasswordEmail"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_mail_24"
            android:hint="Email-id"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLogin"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_baseline_mail_24" />

        <EditText
            android:id="@+id/new_password_id"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="New Password"
            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLogin"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24" />

        <EditText
            android:id="@+id/new_confirm_password_id"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:padding="10dp"
            android:layout_marginEnd="10dp"
            android:drawableStart="@drawable/ic_baseline_lock_24"
            android:hint="Conform Password"
            android:inputType="textPassword"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtLogin"
            android:layout_marginRight="10dp"
            android:drawableLeft="@drawable/ic_baseline_lock_24" />

        <Button
            android:id="@+id/btnPasswordReset"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginTop="44dp"
            android:clickable="true"
            android:text="Reset Password"
            android:textColor="@color/createAccountColor"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etPasswordEmail"
            app:layout_constraintVertical_bias="0.025"/>



    </LinearLayout>

</RelativeLayout>